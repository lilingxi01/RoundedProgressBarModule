<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundedProgressBar">
        <attr name="roundedRadius" format="dimension"/>
        <attr name="progress" format="float"/>
        <attr name="barBackgroundColor" format="color"/>
        <attr name="barProgressColor" format="color"/>
        <attr name="drawingDirection" format="integer">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>
</resources>